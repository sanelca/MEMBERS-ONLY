<h3>Posts</h3>
<% if logged_in? %>
	<%= link_to 'Log Out', logout_path, method: :delete %>
	<%= link_to "Create Post", new_post_path %>
<% else %>
	<%= link_to "Log In", login_path %>
<% end %>

<% @posts.each do |p|
  authorName = "Log in to see who wrote this!"
  if logged_in?
    authorName = p.user.username
  end
%>
<div class="title">Tutle</div>
<div class="body"><%= p.content %></div>
<div class="author">
  <%= authorName %>
</div>
</br></br>
<% end %>
