<%= link_to "Log out", logout_path, method: :delete %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1>
        <%= @user.username %>
      </h1>
    </section>
  </aside>
  <% if logged_in? %>
    <h3>Posts (<%= @user.posts.size %>)</h3>
    <%= render partial: 'users/post', collection: @user.posts %>
  <% end %>
</div>
